@{
    var routeValues = new RouteValueDictionary();

    routeValues.Add("area", "Lombiq.ArchivedLinks");
    routeValues.Add("action", "Index");
    routeValues.Add("controller", "ArchivedLink");
    routeValues.Add("originalUrl", Model.OriginalUrl);
}

<fieldset>
    <ol>
        <li>
            @T("Original Url:")
            <br />
            <a href="@Model.OriginalUrl" target="_blank">@Model.OriginalUrl</a>
        </li>
        <li>
            @T("Snapshot:")
            <br />
            <a href="@Model.SnapshotUrl" target="_blank">@Model.SnapshotUrl</a>
        </li>
        <li>
            @T("Jump Url:")
            <br />
            <a href="@Url.RouteUrl(routeValues)">@Url.RouteUrl(routeValues)</a>
        </li>
    </ol>
</fieldset>